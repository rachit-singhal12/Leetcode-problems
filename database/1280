select s.student_id,
        s.student_name,
        sub.subject_name,
        COUNT(e.subject_name) as attended_exams
from Students s
CROSS JOIN Subjects sub
LEFT JOIN Examinations e on s.student_id = e.student_id
AND sub.subject_name = e.subject_name
group by s.student_id,
        s.student_name,
        sub.subject_name
order by s.student_id asc;